<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Add your advertisement" GridPane.columnIndex="0"
           GridPane.rowIndex="0"></Label>
    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <TextField fx:id="numOfRooms" promptText="Number of rooms" prefWidth="200"/>
        <TextField fx:id="sizeOfAp" promptText="Size(m^2)" prefWidth="150"/>
        <TextField fx:id="floorOfAp" promptText="Floor" prefWidth="100"/>
        <TextField fx:id="priceofAp" promptText="Price" prefWidth="100"/>
    </HBox>

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <fx:define>
            <ToggleGroup fx:id="typeOfApartment"/>
        </fx:define>
        <RadioButton fx:id="privateHouseType" text="Private house" prefWidth="75" toggleGroup="$typeOfApartment"/>
        <RadioButton fx:id="apartmentType" text="Apartment" prefWidth="75" toggleGroup="$typeOfApartment"/>
        <RadioButton fx:id="hostelRoomType" text="Hostel room" prefWidth="75" toggleGroup="$typeOfApartment"/>
        <fx:define>
            <ToggleGroup fx:id="petsAllowance"/>
        </fx:define>
        <RadioButton fx:id="petsAllowed" text="Pets allowed" prefWidth="75" toggleGroup="$petsAllowance"/>
        <RadioButton fx:id="petsNotAllowed" text="Pets not allowed" prefWidth="75" toggleGroup="$petsAllowance"/>
        <Button text="Post Ad" onAction="#addApartment"/>
    </HBox>

</GridPane>