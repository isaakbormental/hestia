<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Hestia Registration" GridPane.columnIndex="0"
           GridPane.rowIndex="0"></Label>
    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <TextField fx:id="nameField" promptText="Full Name" prefWidth="200"/>
        <TextField fx:id="emailField" promptText="Email" prefWidth="150"/>
        <TextField fx:id="phoneField" promptText="Phone" prefWidth="100"/>
        <fx:define>
            <ToggleGroup fx:id="roleRadio"/>
        </fx:define>
        <RadioButton fx:id="ownerRadio" text="Owner" prefWidth="75" toggleGroup="$roleRadio"/>
        <RadioButton fx:id="renterRadio" text="Renter" prefWidth="75" toggleGroup="$roleRadio"/>
        <Button text="Register" onAction="#addPerson"/>
    </HBox>
</GridPane>